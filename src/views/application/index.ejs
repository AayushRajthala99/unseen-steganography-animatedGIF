<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Unseen: Steganography On Animated GIFs</title>
  </head>
  <%- include('../header.ejs') %>

  <body oncontextmenu="return false">
    <form
      action="/process"
      id="applicationform"
      method="post"
      class="form-container"
    >
      <fieldset class="form-field form-info">
        <legend class="form-info">Steganography</legend>
        <div class="input-container">
          <fieldset class="input-field input-info">
            <legend class="input-info">Operation</legend>
            <div class="radio-selection">
              <div class="radio-value">
                <input type="radio" name="encode" value="0" checked />
                <label for="Encode">Encode</label>
                <input type="radio" name="decode" value="1" />
                <label for="decode">Decode</label>
              </div>
            </div>
            <div class="form-error"></div>
          </fieldset>

          <fieldset class="input-field input-info">
            <legend class="input-info">Animated GIF File</legend>
            <div class="form-inputs">
              <input type="file" id="gifFile" name="gifFile" />
            </div>
            <div class="form-error" id="gifFileError">Aayush</div>
          </fieldset>

          <fieldset class="input-field input-info">
            <legend class="input-info">Secret Message</legend>
            <div class="form-inputs">
              <textarea id="secretmessage" name="secretmessage"></textarea>
            </div>
            <div class="form-error" id="secretmessageError">Aayush</div>
          </fieldset>

          <fieldset class="input-field input-info">
            <legend class="input-info">Key</legend>
            <div class="form-inputs">
              <textarea id="key" name="key"></textarea>
            </div>
            <div class="form-error" id="keyError">Aayush</div>
          </fieldset>
        </div>
      </fieldset>
      <button type="submit" class="submit-button">START</button>
    </form>
    <script src="/js/application.js"></script>
  </body>
  <%- include('../footer.ejs') %>
</html>
